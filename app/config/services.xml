<?xml version="1.0" encoding="UTF-8"?>
<container>
    <parameters>
        <parameter key="router.class">PHPPie\Routing\Router</parameter>
        <parameter key="http.request.class">PHPPie\HTTP\Request</parameter>
         <parameter key="http.response.class">PHPPie\HTTP\Response</parameter>
    </parameters>
    
    <services>
        <service id="router" class="%router.class%">
            <argument>@kernel</argument>
        </service>
        
        <service id="http.request" class="%http.request.class%"></service>
        <service id="http.response" class="%http.response.class%"></service>
    </services>
</container>
